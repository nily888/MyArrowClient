<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rene.myarrow.GUI.Ergebnis.ErgebnisAmZiel"
    android:background="@mipmap/ergebnis_am_ziel">

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/but_ziel_button"
        android:drawSelectorOnTop="true"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal" >
        
	    <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="zurÃ¼ck"
            android:id="@+id/zurueck_button"
            android:textSize="20sp"
            android:background="@drawable/button_bg_transparent"
            android:onClick="onClickZurueck" />

	    <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Foto"
            android:id="@+id/foto_button"
            android:textSize="20sp"
            android:background="@drawable/button_bg_transparent"
            android:onClick="onClickFoto" />

	    <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="weiter"
            android:id="@+id/weiter_button"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:onClick="onClickWeiter" />

    </LinearLayout>

</LinearLayout>