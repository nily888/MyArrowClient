<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rene.myarrow.GUI.Ergebnis.TrefferAmZiel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Schuetze"
            android:textSize="20sp"
            android:id="@+id/txt_schuetze"
            android:layout_gravity="start"
            android:gravity="start"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Punktestand"
            android:textSize="20sp"
            android:id="@+id/txt_aktuellerpunktestand"
            android:layout_gravity="end"
            android:gravity="end"/>

    </LinearLayout>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="1"
        android:id="@+id/ein_schuss"
        android:textSize="40sp"
        android:background="@drawable/button_bg_transparent"/>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="2"
        android:id="@+id/zwei_schuss"
        android:textSize="40sp"
        android:background="@drawable/button_bg_transparent"/>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="3"
        android:id="@+id/drei_schuss"
        android:textSize="40sp"
        android:background="@drawable/button_bg_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Kill"
            android:id="@+id/kill_schuss"
            android:textSize="20sp"
            android:background="@drawable/button_bg_transparent"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Kill-Kill"
            android:id="@+id/killkill_schuss"
            android:textSize="20sp"
            android:background="@drawable/button_bg_transparent" />

    </LinearLayout>

</LinearLayout>